{
  "name": "mcp-sequential-thinking",
  "version": "0.3.0",
  "type": "module",
  "private": false,
  "description": "A Sequential Thinking MCP Server for advanced problem solving",
  "keywords": ["mcp", "ai", "problem-solving", "sequential-thinking", "typescript"],
  "author": "Arben Ademi <arben.ademi@tuta.io>",
  "license": "MIT",
  "scripts": {
    "dev": "tsx bin/run-server.ts",
    "build": "tsup src --format esm,cjs --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "boxen": "^7.1.1",
    "ora": "^8.0.1",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "yaml": "^2.4.0",
    "zod": "^3.22.4",
    "proper-lockfile": "^4.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "husky": "^9.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "mcp-sequential-thinking": "./bin/run-server.js"
  }
}
